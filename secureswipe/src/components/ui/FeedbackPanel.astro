---
// FeedbackPanel.astro - Panel que muestra retroalimentación después de la evaluación de una tarjeta
const { isCorrect, explanation, title } = Astro.props;
---

<div class={`feedback-panel ${isCorrect ? 'feedback-correct' : 'feedback-incorrect'}`}>
  <div class="feedback-header">
    <span class="feedback-icon">{isCorrect ? '✅' : '❌'}</span>
    <h3 class="feedback-title">
      {isCorrect ? '¡Correcto!' : 'Incorrecto'}
    </h3>
  </div>
  
  <div class="feedback-content">
    <h4>{title}</h4>
    <p class="feedback-explanation">{explanation}</p>
  </div>
  
  <div class="feedback-actions">
    <button class="btn btn-primary feedback-next">Siguiente tarjeta</button>
    {isCorrect && <button class="btn btn-secondary feedback-save">Guardar en colección</button>}
  </div>
</div>

<style>
  .feedback-panel {
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    padding: 25px;
    width: 100%;
    max-width: 500px;
    margin: 20px auto;
    animation: fadeIn 0.5s ease-out;
  }

  .feedback-correct {
    border-top: 5px solid #2ecc71;
  }

  .feedback-incorrect {
    border-top: 5px solid #e74c3c;
  }

  .feedback-header {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
  }

  .feedback-icon {
    font-size: 2rem;
    margin-right: 15px;
  }

  .feedback-title {
    font-size: 1.5rem;
    margin: 0;
  }

  .feedback-content {
    margin-bottom: 20px;
  }

  .feedback-content h4 {
    margin-bottom: 10px;
    font-size: 1.1rem;
  }

  .feedback-explanation {
    line-height: 1.6;
    color: #555;
  }

  .feedback-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
  }

  .btn {
    padding: 10px 20px;
    border-radius: 5px;
    font-weight: bold;
    cursor: pointer;
    border: none;
    transition: background-color 0.2s, transform 0.1s;
  }

  .btn:active {
    transform: scale(0.98);
  }

  .btn-primary {
    background-color: #3498db;
    color: white;
  }

  .btn-primary:hover {
    background-color: #2980b9;
  }

  .btn-secondary {
    background-color: #f8f9fa;
    color: #333;
  }

  .btn-secondary:hover {
    background-color: #e9ecef;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 540px) {
    .feedback-actions {
      flex-direction: column;
      gap: 10px;
    }
    
    .btn {
      width: 100%;
    }
  }
</style>
